<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#111827">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_quick_log_title"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/widget_btn_video"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="@string/widget_action_video"
            android:textAllCaps="false"
            android:textSize="13sp" />

        <TextView
            android:layout_width="8dp"
            android:layout_height="1dp"
            android:text="" />

        <Button
            android:id="@+id/widget_btn_book"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="@string/widget_action_book"
            android:textAllCaps="false"
            android:textSize="13sp" />

        <TextView
            android:layout_width="8dp"
            android:layout_height="1dp"
            android:text="" />

        <Button
            android:id="@+id/widget_btn_timeline"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="@string/widget_action_timeline"
            android:textAllCaps="false"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
